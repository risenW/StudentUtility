<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="myapplication.risenapps.com.studentutility">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".Settings"
            android:label="Settings"/>
        <activity
            android:name=".BasicCalculator"
            android:label="@string/title_activity_basic_calculator">
        </activity>
        <activity
            android:name=".Converter"
            android:label="@string/title_activity_converter">
        </activity>
        <activity
            android:name=".TimeTable"
            android:label="@string/title_activity_time_table">
        </activity>
        <activity
            android:name=".Constants"
            android:label="@string/title_activity_constants">
        </activity>
        <activity
            android:name=".About"
            android:label="@string/title_activity_about"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity"/>
        </activity>
        <activity android:name=".moreUnits">
        </activity>
    </application>

</manifest>