<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homeFunctions"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="myapplication.risenapps.com.studentutility.MainActivity"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <Button
            android:text="Functions"
            android:layout_width="180dp"
            android:background="#E5F25E"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:id="@+id/functionButton"
            android:onClick="launchSettings"
            />
        <Button
            android:text="Constants"
            android:layout_width="180dp"
            android:textAlignment="center"
            android:background="#C1F45A"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:id="@+id/constantButton"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:text="sin"
            android:layout_width="70dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:id="@+id/sinButton"/>
        <Button
            android:text="cos"
            android:layout_width="70dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:id="@+id/cosButton"/>
        <Button
            android:text="tan"
            android:layout_width="70dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:id="@+id/tanButton"/>
        <Button
            android:layout_width="70dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:id="@+id/powerButton"
            android:text="X\u00B3"/>
        <Button
            android:text="X\u00B2"
            android:layout_width="70dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:id="@+id/squareButton"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:text="9"
            android:layout_width="90dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:id="@+id/Button9"/>
        <Button
            android:text="8"
            android:layout_width="90dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:id="@+id/Button8"/>
        <Button
            android:text="7"
            android:layout_width="90dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:id="@+id/Button7"/>
        <Button
            android:text="\u00F7"
            android:layout_width="90dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:id="@+id/ButtonDiv"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:text="6"
            android:layout_width="90dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:id="@+id/Button6"/>
        <Button
            android:text="5"
            android:layout_width="90dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:id="@+id/Button5"/>
        <Button
            android:text="4"
            android:layout_width="90dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:id="@+id/Button4"/>
        <Button
            android:text="X"
            android:layout_width="90dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:id="@+id/ButtonMultiply"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:text="3"
            android:layout_width="90dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/Button3"/>
        <Button
            android:text="2"
            android:layout_width="90dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/Button2"/>
        <Button
            android:text="1"
            android:layout_width="90dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/Button1"/>
        <Button
            android:text="-"
            android:layout_width="90dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/ButtonMinus"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:text="\u21D0"
            android:layout_width="90dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/ClearButton"/>
        <Button
            android:text="0"
            android:layout_width="90dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/Button0"/>
        <Button
            android:text="\u2219"
            android:layout_width="90dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/pointButton"/>
        <Button
            android:text="+"
            android:layout_width="90dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/ButtonPlus"/>


    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="="
        android:textSize="40sp"/>






</LinearLayout>
