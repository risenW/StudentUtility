<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Basic_Activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="myapplication.risenapps.com.studentutility.Settings">



    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:clickable="false"
        android:cursorVisible="true"
        android:contextClickable="false"
        android:id="@+id/BasictextViewUp"
        android:editable="false"
        padding="0dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:contextClickable="false"
        android:cursorVisible="true"
        android:id="@+id/BasictextViewDown"
        android:editable="false"
        padding="0dp"

        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:text="\u21D0"
            android:layout_width="180dp"
            android:background="#E5F25E"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="30sp"
            android:layout_height="wrap_content"
            android:id="@+id/clearButton"
            android:onClick="launchSettings"
            />
        <Button
            android:text="\u00B1"
            android:layout_width="180dp"
            android:textAlignment="center"
            android:background="#C1F45A"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:id="@+id/percentageButton"/>


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:text="9"
            android:layout_width="90dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:id="@+id/BasicButton9"/>
        <Button
            android:text="8"
            android:layout_width="90dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:id="@+id/BasicButton8"/>
        <Button
            android:text="7"
            android:layout_width="90dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:id="@+id/Button7"/>
        <Button
            android:text="\u00F7"
            android:layout_width="90dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:id="@+id/BasicButtonDiv"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:text="6"
            android:layout_width="90dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:id="@+id/Button6"/>
        <Button
            android:text="5"
            android:layout_width="90dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:id="@+id/BasicButton5"/>
        <Button
            android:text="4"
            android:layout_width="90dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:id="@+id/BasicButton4"/>
        <Button
            android:text="x"
            android:layout_width="90dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:id="@+id/BasicButtonMultiply"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:text="3"
            android:layout_width="90dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/BasicButton3"/>
        <Button
            android:text="2"
            android:layout_width="90dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/BasicButton2"/>
        <Button
            android:text="1"
            android:layout_width="90dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/BasicButton1"/>
        <Button
            android:text="-"
            android:layout_width="90dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:id="@+id/BasicButtonMinus"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:text="00"
            android:layout_width="90dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/BasicButton00"/>
        <Button
            android:text="0"
            android:layout_width="90dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/BasicButton0"/>
        <Button
            android:text="\u2219"
            android:layout_width="90dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/BasicPointButton"/>
        <Button
            android:text="+"
            android:layout_width="90dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/BasicButtonPlus"/>


    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="="
        android:textSize="20sp"
        android:id="@+id/BasicEqualsButton"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">





    </LinearLayout>


</LinearLayout>
