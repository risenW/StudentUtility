<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Basic_Activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="myapplication.risenapps.com.studentutility.Settings"
   >



    <EditText
        android:layout_width="match_parent"
        android:id="@+id/BasictextViewUp"
        android:textSize="30sp"
        android:layout_gravity="end"
        android:layout_height="70dp"
        android:editable="false"
        android:textAlignment="textEnd"
        android:gravity="end"
        android:contextClickable="false"
       />

    <EditText
        android:layout_width="match_parent"
        android:id="@+id/BasictextViewDown"
        android:textSize="30sp"
        android:contextClickable="false"
        android:layout_gravity="end"
        android:cursorVisible="false"
        android:editable="false"
        android:textAlignment="textEnd"
        android:gravity="end"
        android:layout_height="70dp"
       />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:text="9"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="35sp"
            android:id="@+id/BasicButton9"
            android:layout_width="wrap_content"
            android:onClick="onClick"
            android:layout_height="70dp"/>
        <Button
            android:text="8"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="35sp"
            android:id="@+id/BasicButton8"
            android:onClick="onClick"
            android:layout_height="70dp"/>
        <Button
            android:text="7"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="35sp"
            android:onClick="onClick"
            android:id="@+id/Button7"
            android:layout_height="70dp"/>
        <Button
            android:text="\u00F7"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="35sp"
            android:id="@+id/BasicButtonDiv"
            android:onClick="onClick"
            android:layout_height="70dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="2dp">

        <Button
            android:text="6"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="35sp"
            android:layout_height="70dp"
            android:id="@+id/Button6"
            android:onClick="onClick"/>
        <Button
            android:text="5"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="35sp"
            android:layout_height="70dp"
            android:id="@+id/BasicButton5"
            android:layout_width="wrap_content"
            android:onClick="onClick"/>
        <Button
            android:text="4"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="35sp"
            android:layout_height="70dp"
            android:id="@+id/BasicButton4"
            android:layout_width="wrap_content"
            android:onClick="onClick"/>
        <Button
            android:text="x"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_height="70dp"
            android:id="@+id/BasicButtonMultiply"
            android:layout_width="wrap_content"
            android:onClick="onClick"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:orientation="horizontal">

        <Button
            android:text="3"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_height="70dp"
            android:textSize="35sp"
            android:id="@+id/BasicButton3"
            android:layout_width="wrap_content"
            android:onClick="onClick"/>
        <Button
            android:text="2"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_height="70dp"
            android:textSize="35sp"
            android:id="@+id/BasicButton2"
            android:onClick="onClick"/>
        <Button
            android:text="1"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_height="70dp"
            android:textSize="35sp"
            android:id="@+id/BasicButton1"
            android:layout_width="wrap_content"
            android:onClick="onClick"/>
        <Button
            android:text="-"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_height="70dp"
            android:textSize="35sp"
            android:id="@+id/BasicButtonMinus"
            android:onClick="onClick"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:orientation="horizontal">

        <Button
            android:text="00"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="35sp"
            android:id="@+id/BasicButton00"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:onClick="onClick"/>

        <Button
            android:text="0"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="35sp"
            android:id="@+id/BasicButton0"
            android:layout_height="70dp"
            android:onClick="onClick"/>
        <Button
            android:text="\u2219"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="35sp"
            android:id="@+id/BasicPointButton"
            android:layout_height="70dp"
            android:onClick="onClick"/>
        <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="35sp"
            android:id="@+id/BasicButtonPlus"
            android:layout_height="70dp"
            android:onClick="onClick"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:orientation="horizontal">

        <Button
            android:text="âŒ«"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_height="80dp"
            android:textSize="35sp"
            android:id="@+id/backSpace"
            android:layout_width="wrap_content"
            android:onClick="onClick"/>
        <Button
            android:text="C"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_height="80dp"
            android:textSize="35sp"
            android:id="@+id/ScientificClearButton"
            android:onClick="onClick"/>
        <Button
            android:text="="
            android:textSize="35sp"
            android:id="@+id/BasicEqualsButton"
            android:onClick="onClick"
            android:layout_height="80dp"
            android:layout_width="175dp"/>


    </LinearLayout>

    </LinearLayout>



</LinearLayout>
